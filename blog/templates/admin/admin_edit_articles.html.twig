
{% extends 'base.html.twig' %}

{% block title %}Modifier un article {% endblock %}

{% block body %}


<div class="container">
<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
</div>


<h1 class="display-4 text-center">Modifier un article</h1> 
{{ form_start(formulaire, {'attr': {'class': 'col-md-5 mx-auto'} } ) }}

        {{ form_row(formulaire.title, {'attr' : {'placeholder' : 'Veillez saisir un titre'}, 'label' : 'Titre' }) }}

        {{ form_row(formulaire.content, {'attr' : {'placeholder' : 'Saisissez votre contenu'}, 'label' : 'Contenu de l\'article' }) }}

        {{ form_row(formulaire.image, { 'label' : 'Image' }) }}

        {{ form_row(formulaire.author, {'attr' : {'placeholder' : 'Votre Nom'}, 'label' : 'Auteur' }) }}
 
        <button type="submit" class="btn btn-sm btn-outline-warning text-white">Modifier</button>

        {{form_end(formulaire)}}


{% endblock %}