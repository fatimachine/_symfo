
{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}


<div class="container">
<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
</div>


<h1 class="display-4 text-center">         {% if modeEdit %}Modifier  {% else %}Ajouter          {% endif %} un article</h1>  {# Ici nous interpolons la variable titre1 que nous a envoy√© la fonction render() de 'home' depuis notre BlogController #}
{{ form_start(formulaire, {'attr': {'class': 'col-md-5 mx-auto'} } ) }}

